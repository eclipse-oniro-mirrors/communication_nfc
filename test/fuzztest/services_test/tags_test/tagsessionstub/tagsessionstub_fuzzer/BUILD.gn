import("//build/config/features.gni")
import("//build/test.gni")
import("../../../../../nfc.gni")

ohos_fuzztest("TagSessionStubFuzzTest") {
  module_out_path = "nfc/services"

  fuzz_config_file = "$NFC_SERVICE_ROOT/test/fuzztest/services_test/tags_test/tagsessionstub/tagsessionstub_fuzzer"

  include_dirs = [
    "$NFC_SERVICE_ROOT/services/include",
    "$NFC_SERVICE_ROOT/services/src/tags",
    "$NFC_SERVICE_ROOT/interfaces/inner_api/include",
  ]

  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
  ]

  sources = [
    "nfc_service_fuzz.cpp",
    "tagsessionstub_fuzzer.cpp",
  ]

  deps = [
    "$NFC_SERVICE_ROOT/interfaces/inner_api:nfc_inner_kits",
    "$NFC_SERVICE_ROOT/services:nfc_service",
  ]

  external_deps = [
    "ability_base:want",
    "access_token:libaccesstoken_sdk",
    "c_utils:utils",
    "ipc:ipc_core",
  ]
}

group("fuzztest") {
  testonly = true
  deps = []
  deps += [
    # deps file
    ":TagSessionStubFuzzTest",
  ]
}
